<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Signup</title>
    <link href='/style.css' rel='stylesheet' />

  </head>
  <body
    class='bg-gradient-to-r from-pink-500 to-blue-500 min-h-screen flex items-center justify-center'
  >
    <div class='bg-white p-8 rounded-lg shadow-lg w-full max-w-sm'>
      <h2 class='text-2xl font-bold text-center text-blue-700 mb-6'>Create Your
        Account</h2>
      <form
        action='/auth/signup'
        method='POST'
        onsubmit=' return signup(this);'
      >
        <div class='mb-4'>
          <label class='block text-gray-700'>Username</label>
          <input
            type='text'
            name='username'
            value='{{username}}'
            class='w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'
          />

          <p class='text-sm user-error text-red-600 mt-2'>{{user_error}}
          </p>
        </div>
        <div class='mb-4'>
          <label class='block text-gray-700'>Email</label>
          <input
            type='email'
            name='email'
            value='{{email}}'
            class='w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'
          />

          <p class='text-sm email-error text-red-600 mt-2'>
            {{email_error}}
          </p>
        </div>
        <div class='mb-4'>
          <label class='block text-gray-700'>Password</label>
          <input
            type='password'
            name='password'
            class='w-full p-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500'
          />

          <p class='text-sm pass-error text-red-600 mt-2'>{{password_error}}
          </p>
        </div>
        <button
          type='submit'
          class='w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-400'
        >Sign Up</button>
        <p class='mt-4 text-center text-gray-600'>Already have an account?
          <a href='/auth/login' class='text-pink-600'>Log In</a></p>
      </form>
      <a
        href='/auth/google'
        class='flex items-center mt-8 justify-center w-full px-4 py-2 border border-solid border-black text-black hover:text-white font-semibold rounded-lg hover:bg-blue-600 focus:outline-none'
      >
        <img
          src='https://img.icons8.com/color/16/000000/google-logo.png'
          alt='Google logo'
          class='mr-2'
        />
        Sign in with Google
      </a>

    </div>
    <script src='/script.js'></script>
  </body>
</html>