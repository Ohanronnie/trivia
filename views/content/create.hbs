<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Create Content</title>
    <link href='/style.css' rel='stylesheet' />
  </head>
  <body
    class='bg-gradient-to-r from-pink-500 to-blue-500 space-y-12 min-h-screen p-6 flex-col flex items-center justify-center'
  >

    <!-- Form Container -->
    <div
      class='bg-white p-8 rounded-xl shadow-lg w-full max-w-xl items-center justify-center'
    >
      <h1 class='text-3xl font-bold text-center text-blue-700 mb-6'>Create Your
        Content</h1>

      <!-- Main Content Post -->
      <form
        enctype='multipart/form-data'
        action='/content/create'
        method='post'
      >

        <div class='mb-4'>
          <label class='block text-gray-700 font-semibold'>User Information</label>
          <div class='mt-4'>
            <label class='block text-gray-700 m-1 font-semibold'>BIO</label>

            <input
              type='text'
              placeholder='Enter your bio here'
              name='bio'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
          </div>
          <div class='my-2'>
            <label for='contentFile' class='block text-gray-700'>User Image</label>
            <input
              type='file'
              placeholder='https://youtube.com'
              id='contentFile'
              name='user-image'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />

          </div>
        </div>
        <div class='mb-4'>
          <label
            for='contentFile'
            class='block text-gray-700 font-semibold'
          >Embeded content url</label>
          <input
            type='url'
            placeholder='https://youtube.com'
            id='contentFile'
            name='iframe'
            required
            class='w-full p-2 border border-gray-300 rounded-lg'
          />
        </div>

        <!-- Social Media Links -->
        <div class='mb-4'>
          <label class='block text-gray-700 font-semibold'>Social Media Links</label>
          <div class='space-y-2'>
            <input
              type='url'
              placeholder='Facebook URL'
              name='facebook'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
            <input
              type='url'
              placeholder='Instagram URL'
              name='instagram'
              required
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='url'
              required
              placeholder='Twitter URL'
              name='twitter'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
          </div>
        </div>

        <!-- Trivia Questions -->
        <div class='mb-4'>
          <label class='block text-gray-700 font-semibold'>Trivia Questions</label>
          <div class='space-y-2'>
            <input
              type='text'
              placeholder='Question 1'
              name='question1'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
            <input
              type='text'
              placeholder='Option A'
              name='opt-1-quest-1'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
            <input
              type='text'
              placeholder='Option B'
              name='opt-2-quest-1'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
            <input
              type='text'
              placeholder='Option C'
              name='opt-3-quest-1'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
            <input
              type='text'
              placeholder='Option D'
              name='opt-4-quest-1'
              class='w-full p-2 border border-gray-300 rounded-lg'
              required
            />
          </div>
          <div class='space-y-2'>
            <input
              type='text'
              placeholder='Question 1'
              name='question2'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option A'
              name='opt-1-quest-2'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option B'
              name='opt-2-quest-2'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option C'
              name='opt-3-quest-2'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option D'
              name='opt-4-quest-2'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
          </div>
          <div class='space-y-2'>
            <input
              type='text'
              placeholder='Question 1'
              name='question3'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option A'
              name='opt-1-quest-3'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option B'
              name='opt-2-quest-3'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option C'
              name='opt-3-quest-3'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
            <input
              type='text'
              placeholder='Option D'
              name='opt-4-quest-3'
              class='w-full p-2 border border-gray-300 rounded-lg'
            />
          </div>

        </div>

        <!-- Prize Carousel -->
        <div class='mb-4'>
          <label class='block text-gray-700 font-semibold'>Prizes (Upload Image
            & Description)</label>
          <div class='space-y-2'>
            <input
              type='file'
              class='w-full p-2 border border-gray-300 rounded-lg'
              name='prize1'
              required
            />
            <input
              type='file'
              class='w-full p-2 border border-gray-300 rounded-lg'
              name='prize2'
            />
            <input
              type='file'
              class='w-full p-2 border border-gray-300 rounded-lg'
              name='prize3'
            />
          </div>
        </div>
        <!-- Submit Button -->
        <button
          type='submit'
          class='w-full bg-pink-600 text-white py-2 rounded-lg hover:bg-pink-500'
        >Save Content</button>
      </form>
    </div>

  </body>
</html>